{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "extensionHost",
            "request": "launch",
            "name": "Launch Client",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceRoot}"
            ],
            "outFiles": [
                "${workspaceRoot}/client/out/**/*.js"
            ],
            "env": {
                "RUST_BACKTRACE": "1"
            },
            "preLaunchTask": "build",
            //"trace": true
            //"cwd": "${workspaceRoot}/client"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'phpls-rs'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=phpls-rs",
                    "--package=phpls-rs"
                ],
                "filter": {
                    "name": "phpls-rs",
                    "kind": "bin"
                }
            },
            "args": [
                "fixtures/class.php"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'phpls-rs'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=phpls-rs",
                    "--package=phpls-rs"
                ],
                "filter": {
                    "name": "phpls-rs",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}